{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
    {% if form_errors(form) %}<div class="alert alert-error"><a class="close" data-dismiss="alert" href="#">×</a>{{ form_errors(form) }}</div>{% endif %}

    {{ form_widget(form.current_password, {'attr': {'class': 'span4', 'placeholder' : 'Mot de passe actuel'} } ) }}
    {% if form_errors(form.current_password) %}<div class="alert alert-error"><a class="close" data-dismiss="alert" href="#">×</a>{{ form_errors(form.current_password) }}</div>{% endif %}

    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'span4', 'placeholder' : 'Nouveau mot de passe'} }) }}
    {% if form_errors(form.plainPassword.first) %}<div class="alert alert-error"><a class="close" data-dismiss="alert" href="#">×</a>{{ form_errors(form.plainPassword.first) }}</div>{% endif %}

    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'span4', 'placeholder' : 'Vérification'} }) }}
    {% if form_errors(form.plainPassword.second) %}<div class="alert alert-error"><a class="close" data-dismiss="alert" href="#">×</a>{{ form_errors(form.plainPassword.second) }}</div>{% endif %}

    {{ form_rest(form) }}
    <button type="submit" id="_submit" name="_submit" class="btn btn-info btn-block">Valider</button>
</form>
